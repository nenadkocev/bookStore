@model IEnumerable<object>
@{
    List<bookStore.Models.Genre> lstGenre = Model.ToList()[0] as List<bookStore.Models.Genre>;
    List<bookStore.Models.Author> lstAuthor = Model.ToList()[1] as List<bookStore.Models.Author>;
    List<bookStore.Models.Book> lstBook = Model.ToList()[2] as List<bookStore.Models.Book>;
    ViewBag.Title = "Дома";
}

<div id="templatemo_container">
    <div id="templatemo_header" style="background-image: url('../Content/images/templatemo_header_bg.jpg')">
    </div>

    <div id="templatemo_content">
        <div id="templatemo_content_left" @*style="width: 210px"*@>
            <div class="templatemo_content_left_section">
                <h1>Омилени жанрови</h1>
                <ul>
                    @foreach (var item in lstGenre)
                    {
                        <li><a href="/Genres/Details/@item.Id">@item.Name</a></li>
                    }
                </ul>
            </div>

            <div class="templatemo_content_left_section">
                <h1>Омилени автори</h1>
                <ul>
                    @foreach (var item in lstAuthor)
                    {
                        <li><a href="/Authors/Details/@item.Id">@item.Name</a></li>
                    }
                </ul>
            </div>
        </div>

        <div id="templatemo_content_right">
            <div class="templatemo_product_box">
                <h1>
                    @lstBook[0].Name
                    <span>(од @lstBook[0].Author.Name)</span>
                </h1>
                <img src="@lstBook[0].ImageURL" alt="image">
                <div class="product_info">
                    <h3>@lstBook[0].Price МКД</h3>
                    <div class="buy_now_button">
                        <a href="@Url.Action("OrderNow", "ShoppingCart", new { id = lstBook[0].Id})">Кошничка</a>
                    </div>
                    <div class="detail_button">
                        <a href="@Url.Action("Details", "Books", new { id = lstBook[0].Id})">Детали</a>
                    </div>
                </div>
                <div class="cleaner">&nbsp;</div>
            </div>
            <div class="cleaner_with_width">&nbsp;</div>



            <div class="templatemo_product_box">
                <h1>
                    @lstBook[1].Name
                    <span>(од @lstBook[1].Author.Name)</span>
                </h1>
                <img src="@lstBook[1].ImageURL" alt="image">
                <div class="product_info">
                    <h3>@lstBook[1].Price МКД</h3>
                    <div class="buy_now_button">
                        <a href="@Url.Action("OrderNow", "ShoppingCart", new { id = lstBook[1].Id})">Кошничка</a>
                    </div>
                    <div class="detail_button">
                        <a href="@Url.Action("Details", "Books", new { id = lstBook[1].Id})">Детали</a>
                    </div>
                </div>
                <div class="cleaner">&nbsp;</div>
            </div>
            <div class="cleaner_with_width">&nbsp;</div>


            <div class="templatemo_product_box">
                <h1>
       
                    @lstBook[2].Name
                    <span>(од @lstBook[2].Author.Name)</span>
                </h1>
                <img src="@lstBook[2].ImageURL" alt="image">
                <div class="product_info">
                    <h3>@lstBook[2].Price МКД</h3>
                    <div class="buy_now_button">
                        <a href="@Url.Action("OrderNow", "ShoppingCart", new { id = lstBook[2].Id})">Кошничка</a>
                    </div>
                    <div class="detail_button">
                        <a href="@Url.Action("Details", "Books", new { id = lstBook[2].Id})">Детали</a>
                    </div>
                </div>
                <div class="cleaner">&nbsp;</div>
            </div>
            <div class="cleaner_with_width">&nbsp;</div>


            <div class="templatemo_product_box">
                <h1>
                    @lstBook[3].Name
                    <span>(од @lstBook[3].Author.Name)</span>
                </h1>
                <img src="@lstBook[3].ImageURL" alt="image">
