                    </div>
                    <div class="detail_button">
                        <a href="@Url.Action("Details", "Books", new { id = lstBook[3].Id})">Детали</a>
                    </div>
                </div>
                <div class="cleaner">&nbsp;</div>
            </div>
            <div class="cleaner_with_width">&nbsp;</div>
        </div>
    </div>

    <div id="templatemo_footer">

        Copyright © @DateTime.Now.Year
    </div>

</div>

